          "name": "Get Available Voices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/v1/audio/voices",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "audio", "voices"]
