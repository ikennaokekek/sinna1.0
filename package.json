{
  "name": "sinna-api",
  "version": "1.0.0",
  "description": "Advanced accessibility features API for streaming platforms",
  "main": "dist/index.js",
  "scripts": {
    "dev": "pnpm -C apps/api dev",
    "dev:worker": "pnpm -C apps/worker dev",
    "build": "pnpm -C packages/types build && pnpm -C apps/api build && pnpm -C apps/worker build",
    "start": "node apps/api/dist/index.js",
    "start:worker": "node apps/worker/dist/index.js",
    "test": "jest",
    "test:vitest": "vitest run",
    "test:heal": "vitest run tests/videoTransform.heal.ts",
    "watchdog": "tsx scripts/watchdog.ts",
    "watchdog:dev": "tsx watch scripts/watchdog.ts",
    "test:api": "tsx scripts/test-api-endpoints.ts",
    "test:e2e": "E2E_BASE_URL=http://localhost:4000 npx playwright test",
    "docker": "docker compose up -d",
    "gen:postman": "node scripts/generate-postman.js"
  },
  "keywords": [
    "accessibility",
    "streaming",
    "api",
    "subtitles",
    "audio-description"
  ],
  "author": "Sinna Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.441.0",
    "@aws-sdk/s3-request-presigner": "^3.441.0",
    "@sentry/node": "^7.77.0",
    "assemblyai": "^4.0.0",
    "bullmq": "^4.15.0",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.15.0",
    "prom-client": "^15.0.0",
    "sharp": "^0.34.4",
    "stripe": "^14.7.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/cors": "^2.8.15",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.6",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "playwright": "^1.56.0",
    "tsx": "^3.14.0",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "tar-fs@^2": "2.1.4",
      "tar-fs@^3": "3.1.1",
      "rate-limiter-flexible": "5.0.1"
    },
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
